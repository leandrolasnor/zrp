// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "ZRP project development",
	"dockerComposeFile": "docker-compose.yml",
	"service": "api",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "runServices": ["db", "rabbitmq", "redis", "meilisearch"],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	"forwardPorts": [3000, 3001, 3003],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ".devcontainer/boot.sh",
  "postStartCommand": ".devcontainer/start.sh",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"Shopify.ruby-lsp",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "EditorConfig.EditorConfig",
        "MS-CEINTL.vscode-language-pack-pt-BR",
        "shyykoserhiy.git-autoconfig",
        "AiryShift.spaces-inside-braces",
        "streetsidesoftware.code-spell-checker",
        "naumovs.color-highlight",
        "sndst00m.markdown-github-dark-pack"
			]
		}
	},
  "containerEnv": {
    "INSURGENCY_TIME": "30000",
    "MEILISEARCH_ACCESS_KEY": "key",
    "MEILISEARCH_URL": "http://meilisearch:7700/",
    "AMQP_SERVER": "amqp://rabbitmq:5672",
    "SOCKET_IO_SERVER": "http://api",
    "SOCKET_IO_SERVER_PORT": "3003"
  },

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
